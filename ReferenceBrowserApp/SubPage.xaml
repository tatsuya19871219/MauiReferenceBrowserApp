<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReferenceBrowserApp.SubPage"
             xmlns:models="clr-namespace:ReferenceBrowserApp.Models"
             xmlns:custom="clr-namespace:ReferenceBrowserApp.CustomViews"
             Title="SubPage"
             Shell.NavBarIsVisible="False">


    <VerticalStackLayout HorizontalOptions="Center"
                         Spacing="30">


        <HorizontalStackLayout HorizontalOptions="End" Spacing="20">
            <Label Text="Primary" 
                   FontSize="{StaticResource InfoFontSize}" VerticalOptions="Center"/>
            <Switch x:Name="PrimarySwitch" 
                    Toggled="Switch_Toggled"/>
            
            <Button Text="Sync"/>
            
        </HorizontalStackLayout>


        <ListView x:Name="itemListView" 
                  ItemsSource="{Binding SearchItemInfos}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <custom:SearchItemInfoView/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
                
        <HorizontalStackLayout>
            <Button Text="Delete database" Clicked="Button_DeleteDatabase"/>
        </HorizontalStackLayout>




    </VerticalStackLayout>



</ContentPage>